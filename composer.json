{
    "name": "sglms/pdf",
    "description": "A simple (but efficient) mPDF wrapper for Laravel (>12).",
    "type": "library",
    "keywords": [
        "pdf",
        "mpdf",
        "laravel",
        "sglms",
        "signature"
    ],
    "homepage": "https://sglms.com",
    "license": "MIT",
    "authors": [
        {
            "name": "James",
            "email": "james@sglms.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "mpdf/mpdf": "^8.2"
    },
    "require-dev": {
        "laravel/framework": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Sglms\\Pdf\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sglms\\Pdf\\PdfServiceProvider"
            ],
            "aliases": {
                "Pdf": "Sglms\\Pdf\\Facades\\Pdf"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}